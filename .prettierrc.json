{
  "editorconfig": true,
  "tabWidth": 4,
  "printWidth": 120,
  "endOfLine": "lf",
  "semi": true,
  "arrowParens": "always",
  "singleQuote": true,
  "bracketSpacing": false,
  "trailingComma": "none",
  "overrides": [
    {
      "files": ["*.json", ".*rc", "*.yml", "*.conf"],
      "options": {
        "singleQuote": false,
        "tabWidth": 2
      }
    }
  ]
}
