{
  "name": "kdeit",
  "version": "0.0.0",
  "description": "HTML boilerplate",
  "repository": "",
  "author": "Dima Kuznetsov",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=12.13",
    "yarn": ">=1.22"
  },
  "scripts": {
    "start": "yarn server:run",
    "build": "run-p app:build server:build",
    "app:serve": "webpack serve -c ./app/webpack.config.js --mode development --watch",
    "app:build": "webpack -c ./app/webpack.config.js --mode production",
    "app:analyze": "webpack -c ./app/webpack.config.js --mode production --analyze",
    "lint:verify": "eslint --max-warnings=0 \"**/*\"",
    "lint:fix": "eslint --fix \"**/*\"",
    "slint:verify": "stylelint --max-warnings=0 \"app/src/**/*.scss\"",
    "slint:fix": "stylelint --fix \"app/src/**/*.scss\"",
    "server:build": "run-s server:clear server:ts:compile",
    "server:serve": "run-p server:ts:watch server:nodemon",
    "server:ts:compile": "ttsc -p server",
    "server:ts:watch": "ttsc -p server -w",
    "server:nodemon": "nodemon dist/server/index.js",
    "server:run": "node dist/server/index.js",
    "server:clear": "rimraf ./dist/server",
    "docker:build": "docker build --tag kde/kdeitru:latest .",
    "docker:run": "docker run -p 3000:3000 --name kdeitru kde/kdeitru",
    "docker:heroku": "run-s docker:heroku:push docker:heroku:release",
    "docker:heroku:push": "heroku container:push web",
    "docker:heroku:release": "heroku container:release web",
    "yarn:check": "yarn check --integrity",
    "yarn:fix": "yarn --update-checksums",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint:verify slint:verify yarn:check"
    }
  },
  "nodemonConfig": {
    "watch": [
      "dist/server/**/*.js"
    ],
    "delay": "2500"
  },
  "dependencies": {
    "@testing-library/user-event": "^12.7.3",
    "axios": "0.21.1"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@testing-library/jest-dom": "5.11.9",
    "@types/express": "4.17.9",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@typescript-eslint/eslint-plugin": "4.10.0",
    "@typescript-eslint/parser": "4.10.0",
    "babel-jest": "26.6.3",
    "babel-loader": "8.1.0",
    "babel-plugin-const-enum": "1.0.1",
    "copy-webpack-plugin": "7.0.0",
    "css-loader": "5.0.0",
    "eslint": "7.15.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "7.0.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.0",
    "file-loader": "6.2.0",
    "html-webpack-partials-plugin": "0.8.0",
    "html-webpack-plugin": "4.5.0",
    "husky": "4.3.6",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
    "jest-canvas-mock": "2.3.1",
    "jest-fetch-mock": "3.0.3",
    "mini-css-extract-plugin": "1.2.1",
    "nodemon": "2.0.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "sass": "1.28.0",
    "sass-loader": "10.0.5",
    "style-loader": "2.0.0",
    "stylelint": "13.8.0",
    "stylelint-config-idiomatic-order": "8.1.0",
    "ts-jest": "26.5.1",
    "ttypescript": "1.5.12",
    "typescript": "4.0.5",
    "typescript-transform-paths": "2.2.3",
    "webpack": "5.4.0",
    "webpack-bundle-analyzer": "4.2.0",
    "webpack-cli": "4.2.0",
    "webpack-dev-server": "3.11.0"
  }
}
